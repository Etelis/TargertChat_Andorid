<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rel_layout_left"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:gravity="right"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sent_message_border"
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:minWidth="5dp"
        android:backgroundTint="@android:color/darker_gray">

    <TextView
        android:id="@+id/sent_time"
        android:gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sent_text"
        android:layout_alignParentRight="@+id/sent_text"
        android:padding="8dp"
        android:text="Wed 15 Jun 2022 04:50 Am"
        android:textColor="@android:color/white"
        android:textSize="8dp"
        android:textStyle="italic" />

        <TextView
            android:id="@+id/sent_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:minWidth="50dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:text="Wassup"
            android:textSize="16dp" />
    </RelativeLayout>


</RelativeLayout>